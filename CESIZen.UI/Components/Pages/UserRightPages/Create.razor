@page "/userrights/create"
@using Microsoft.EntityFrameworkCore
@using CESIZen.Data.Entities
@inject IDbContextFactory<CESIZen.Data.Context.CESIZenDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>UserRight</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="UserRight" OnValidSubmit="AddUserRight" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="label" class="form-label">Label:</label> 
                <InputText id="label" @bind-Value="UserRight.Label" class="form-control" /> 
                <ValidationMessage For="() => UserRight.Label" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/userrights">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private UserRight UserRight { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddUserRight()
    {
        using var context = DbFactory.CreateDbContext();
        context.UserRights.Add(UserRight);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/userrights");
    }
}
