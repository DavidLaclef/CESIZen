@page "/userrights/edit"
@using Microsoft.EntityFrameworkCore
@using CESIZen.Data.Entities
@inject IDbContextFactory<CESIZen.Data.Context.CESIZenDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Modifier un droit utilisateur</PageTitle>

<div class="d-flex align-items-center mb-4">
    <a href="/userrights/index" class="btn btn-outline-secondary me-3">
        <i class="bi bi-arrow-left"></i>
    </a>
    <h1 class="mb-0">Modifier le droit utilisateur</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (UserRight is null)
        {
            <div class="d-flex justify-content-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
            </div>
        }
        else
        {
            <EditForm method="post" Model="UserRight" OnValidSubmit="UpdateUserRight" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="alert alert-danger" role="alert" />

                <input type="hidden" name="UserRight.Id" value="@UserRight.Id" />

                <div class="mb-4">
                    <label for="label" class="form-label fw-bold">Libellé du droit <span class="text-danger">*</span></label>
                    <InputText id="label" @bind-Value="UserRight.Label" class="form-control form-control-lg" placeholder="Entrez le libellé du droit" />
                    <ValidationMessage For="() => UserRight.Label" class="text-danger" />
                    <div class="form-text">Le libellé du droit sera utilisé pour définir les permissions des utilisateurs.</div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="/userrights/index" class="btn btn-outline-secondary me-2">Annuler</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i> Enregistrer les modifications
                    </button>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private UserRight? UserRight { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        UserRight ??= await context.UserRights.FirstOrDefaultAsync(m => m.Id == Id);

        if (UserRight is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateUserRight()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(UserRight!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!UserRightExists(UserRight!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/userrights/index");
    }

    private bool UserRightExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.UserRights.Any(e => e.Id == id);
    }
}